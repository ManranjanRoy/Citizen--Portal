<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.InsertTLFInalPageActivity">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/logo_haldia"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="RECEIPT NO : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/recieprno"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="RC/2020-2021/0000001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Recieved From  : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/recievedfrom"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="RC/2020-2021/0000001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="The Sum od Rs  : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sumofrs"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="RC/2020-2021/0000001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="On Account Of  : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/onaccountof"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Dummy Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Rs  : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rs"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="RC/2020-2021/0000001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Remark :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/remark"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="RC/2020-2021/0000001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Entered By :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/enteredby"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="RC/2020-2021/0000001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Application Number : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/applicationno"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="RC/2020-2021/0000001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/qrcode"
            android:scaleType="fitXY"
            android:src="@drawable/qrdummy"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/signature"
            android:scaleType="fitXY"
            android:src="@drawable/qrdummy"
            android:layout_width="120dp"
            android:layout_height="70dp"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:background="@color/dot_dark_screen1"/>
        <TextView
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>