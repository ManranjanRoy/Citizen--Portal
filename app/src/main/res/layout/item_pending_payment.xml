<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="110dp">
      <LinearLayout
          android:paddingVertical="10dp"
          android:paddingHorizontal="15dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:textColor="@color/black"
              android:textSize="15dp"
              android:text="Form No :"
              android:textAlignment="textEnd"
              android:layout_width="100dp"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/formno"
              android:textColor="@color/black"
              android:textSize="15dp"
              android:text=" RC/0115/21031316"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
      </LinearLayout>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:textColor="@color/black"
                  android:textSize="15dp"
                  android:text="Applied on :"
                  android:textAlignment="textEnd"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:id="@+id/appliedon"
                  android:textColor="@color/black"
                  android:textSize="15dp"
                  android:text=" 10-12-2020"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:textColor="@color/black"
                  android:textSize="15dp"
                  android:text="Org Name :"
                  android:textAlignment="textEnd"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:id="@+id/orgname"
                  android:textColor="@color/black"
                  android:textSize="15dp"
                  android:text=" Abc Company"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:textColor="@color/black"
                  android:textSize="15dp"
                  android:text="Ward No :"
                  android:textAlignment="textEnd"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:id="@+id/wardno"
                  android:textColor="@color/black"
                  android:textSize="15dp"
                  android:text=" 7"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:gravity="center_vertical"
          android:layout_alignParentEnd="true"
          android:layout_width="wrap_content"
          android:layout_height="match_parent">
      <Button
          android:id="@+id/paybtn"
          android:layout_margin="10dp"
          android:background="@drawable/button_corner"
          android:textColor="@color/white"
          android:layout_width="75dp"
          android:layout_height="35dp"
          android:text="Pay"/>
      </LinearLayout>
  </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>